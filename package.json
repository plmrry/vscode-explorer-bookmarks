{
  "name": "vscode-explorer-bookmarks",
  "displayName": "Explorer Bookmarks",
  "version": "0.1.0",
  "description": "Add bookmarks to the Explorer panel",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/plmrry/vscode-explorer-bookmarks"
  },
  "publisher": "paul-murray",
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish",
    "vsce": "vsce"
  },
  "contributes": {
    "commands": [
      {
        "command": "explorerBookmarks.refresh",
        "title": "Bookmarks: Refresh Bookmarks",
        "icon": "$(refresh)"
      },
      {
        "command": "explorerBookmarks.addBookmark",
        "title": "Bookmarks: Add to Bookmarks",
        "icon": "$(bookmark)"
      },
      {
        "command": "explorerBookmarks.removeBookmark",
        "title": "Bookmarks: Remove from Bookmarks",
        "icon": "$(trash)"
      },
      {
        "command": "explorerBookmarks.setEmoji",
        "title": "Bookmarks: Set Emoji",
        "icon": "$(smiley)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "explorerBookmarks.refresh",
          "when": "view == explorerBookmarks",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "explorerBookmarks.addBookmark",
          "group": "2_workspace"
        }
      ],
      "view/item/context": [
        {
          "command": "explorerBookmarks.setEmoji",
          "when": "view == explorerBookmarks && viewItem == bookmark",
          "group": "inline"
        },
        {
          "command": "explorerBookmarks.removeBookmark",
          "when": "view == explorerBookmarks && viewItem == bookmark",
          "group": "inline"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "explorerBookmarks",
          "name": "Bookmarks",
          "icon": "bookmark-icon.png"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "22",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "@vscode/vsce": "^3.7.0",
    "eslint": "latest",
    "typescript": "latest"
  },
  "engines": {
    "node": "22.19.0",
    "vscode": "^1.105.0"
  },
  "icon": "bookmark-icon.png"
}
